---
import Layout from '../layouts/Layout.astro';
import data from '../../public/data.json';
import '../../assets/scss/astro-ecommerce.scss';
import CardCategory from '../components/products/cardCategory';
import ProductFeature from '../components/products/productFeature';
import Navbar from '../components/navbar';
import StoreDoubleColumn from '../components/store/storeDoubleColumn';
import TestimonialsFade from '../components/promo/testimonialsFade';
import PromoSectionLarge from '../components/promo/promoSectionLarge';
---

<Layout title="Dishec">
	<main>
    <Navbar />
    <PromoSectionLarge 
      title={"Dishec"}
      full_description={data.products[0].full_description}  
      pageHeaderBgImg={"https://www.cummins.com/sites/default/files/2021-06/electric_powerlines_moving_snapshot_m_1.jpg"}
      pageHeaderMinVh="90vh"
    />
    <div class="container my-5">
      <div class="d-flex justify-content-between align-items-center mb-4 d-none">
        <h4>Shop by category</h4>
        <a class="text-primary text-sm font-weight-bold" href="#">Browse all categories ></a>
      </div>
      <div class="row mb-5 d-none">
        {data.categories.map(category => 
          <div class="col-md-6 col-lg-3">
            <CardCategory
              thumb_src = {category.thumb_src}
              title = {category.title}
            />
          </div>
        )}
      </div>

    <PromoSectionLarge 
      title={"Misión"}
      full_description={"En DISHEC, nuestra misión es proporcionar servicios de electricidad y comunicaciones excepcionales a nuestros clientes. Nos comprometemos a ofrecer soluciones confiables, eficientes y seguras para satisfacer las necesidades de cada proyecto. Buscamos establecer relaciones duraderas con nuestros clientes, basadas en la confianza y la satisfacción mutua. A través de nuestro conocimiento experto, la innovación tecnológica y un enfoque centrado en el cliente, nos esforzamos por ser la elección preferida para todas las soluciones eléctricas y de comunicaciones."} 
      pageHeaderBgImg={"https://www.esan.edu.pe/images/blog/2016/06/07/telefonia-principal.jpg"} 
      pageHeaderMinVh="50vh"
      pageHeaderRadius="1rem"
    />
    <div class="my-5 d-none">
      <ProductFeature
        title={data.products[0].title}
        images={data.products[2].images}
        full_description={data.products[0].full_description}
        featuresDetails={data.products[0].featuresDetails}
      />
    </div>
    <div class="mt-5 mb-10 d-none">
      <TestimonialsFade 
        pageHeaderBgImg={"https://images.unsplash.com/photo-1534802046520-4f27db7f3ae5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2729&q=80"} 
        pageHeaderMinVh="50vh"
      />
    </div>
    
    <!-- <StoreDoubleColumn /> -->

    </div>
  </main>

</Layout>